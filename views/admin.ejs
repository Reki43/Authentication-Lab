<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background-color: #f4f4f9;
    }
    h1, h2 {
      color: #333;
    }
    ul {
      list-style-type: none;
      padding: 0;
    }
    li {
      background-color: #fff;
      margin: 10px 0;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }
    button {
      padding: 5px 10px;
      background-color: #f44336;
      border: none;
      color: white;
      border-radius: 3px;
      cursor: pointer;
    }
    button:hover {
      background-color: #d32f2f;
    }
    .back-button {
      padding: 5px 10px;
      background-color: #4CAF50;
      border: none;
      color: white;
      border-radius: 3px;
      cursor: pointer;
      margin-bottom: 15px;
    }
    .back-button:hover {
      background-color: #388E3C;
    }
  </style>
</head>
<body>

  <!-- Back to Dashboard Button -->
  <button class="back-button" onclick="window.location.href='/dashboard';">Back to Dashboard</button>
  
  <h1>Admin Dashboard</h1>
  <h2>Active Sessions</h2>
  <ul>
    <% sessionList.forEach(session => { %>
      <li>
        <strong>User ID:</strong> <%= session.sessionUser %> <br>
        <strong>Session ID:</strong> <%= session.sessionId %> <br>
        <form action="/admin/revoke/<%= session.sessionId %>" method="POST" style="display:inline;">
          <button type="submit">Revoke Session</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
